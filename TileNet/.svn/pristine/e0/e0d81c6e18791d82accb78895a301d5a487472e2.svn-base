package com.putable.tilenet.blueprints;

import javax.swing.JPanel;

import com.putable.tilenet.AgentManager.AgentManager;
import com.putable.tilenet.matrixelement.Matrix;

public abstract class Grid {
	//Fields
	private String name;
	
	// Parts of the a grid
	protected Layout layout;
	protected AgentManager manager;
	
	protected abstract void makeGrid();
	
	public enum GridType {
		HOME,
		SPLASH;
	}
	
	public String getName() { return name; }
	public void setName(String name) { this.name = name; }
	
	//Replay methods
	public void associate(Matrix m){
		layout.associate(m);
	}
	
	public JPanel toJPanel(int height, int width){
		return layout.toJPanel(height, width);
	}
	


}
