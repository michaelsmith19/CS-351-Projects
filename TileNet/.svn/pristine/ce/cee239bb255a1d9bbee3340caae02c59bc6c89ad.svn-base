package com.putable.tilenet.matrix;

import java.awt.Color;
import java.awt.Component;
import java.awt.Graphics;
import java.awt.Image;
import java.awt.image.BufferedImage;

import javax.swing.ImageIcon;

import com.putable.tilenet.matrix.MatrixElementFactory.ElemType;

public abstract class MatrixElement {
	private static long uniqueObjID = 0;
	private String objid;
	private Color bgcolor, fgcolor;
	private int x,y,tileWidth,tileHeight;
	private String name, text;
	private Image image;
	
	public MatrixElement(ElemType type){
		++uniqueObjID;
		this.objid = ("" + type.getPrefix() + uniqueObjID);
	}
	
	public void setAttributes(Color bgcolor, Color fgcolor,
			int x, int y, String name, String text, Image image){
		setBgcolor(bgcolor);
		setFgcolor(fgcolor);
		setX(x);
		setY(y);
		setName(name);
		setText(text);
		setImage(image);
	}
	
	public void setTileWidth(int tileWidth){
		this.tileWidth = tileWidth;
	}
	
	public void setTileHeight(int tileHeight){
		this.tileHeight = tileHeight;
	}
	
	public int getTileWidth(){
		return tileHeight;
	}
	
	public int getTileHeight(){
		return tileWidth;
	}
	
	
	public String getid(){
		return this.objid;
	}
	
	public int getX(){
		return this.x;
	}
	
	public int getY(){
		return this.y;
	}


	public void setid(String objid) {
		this.objid = objid;
	}

	public Color getBgcolor() {
		return bgcolor;
	}

	public void setBgcolor(Color bgcolor) {
		this.bgcolor = bgcolor;
	}

	public Color getFgcolor() {
		return fgcolor;
	}

	public void setFgcolor(Color fgcolor) {
		this.fgcolor = fgcolor;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public String getText() {
		return text;
	}

	public void setText(String text) {
		this.text = text;
	}

	public Image getImage() {
		return image;
	}

	public void setImage(Image image) {
		this.image = image;
	}

	public void setX(int x) {
		this.x = x;
	}

	public void setY(int y) {
		this.y = y;
	}

	public abstract ImageIcon getDisplay(int tileSize);
}
