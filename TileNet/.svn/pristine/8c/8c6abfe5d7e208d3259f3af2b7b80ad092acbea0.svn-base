public class Token extends MatrixElement{
	
	public Token() {
		super(ElemType.TOKEN);
	}

	@Override
	public ImageIcon getDisplay(int tileSize) {
		ImageIcon ic = new ImageIcon(makeBufferedImage(tileSize),getText());
		return ic;
	};

	public BufferedImage makeBufferedImage(int tileSize){
		BufferedImage buffImage = new BufferedImage(tileSize, tileSize, BufferedImage.TYPE_4BYTE_ABGR);
		Graphics g = buffImage.getGraphics();
		g.setColor(getBgcolor());
		g.fillRect(0, 0, tileSize, tileSize);
		if (getImage() != null){
			//g.drawImage(getImage(), 0, 0,);
		}
		g.setColor(getFgcolor());
		g.drawString(getName(), (tileSize/2), (tileSize/2));
	
		
		return buffImage;
	}

	
